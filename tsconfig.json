{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "module": "NodeNext",
    "outDir": "./dist/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "nodenext",
    "declarationDir": "./dts/",
    "declaration": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    "test",
    "dts"
  ]
}
